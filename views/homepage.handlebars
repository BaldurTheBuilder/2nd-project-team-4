{{!-- Placeholder for partial to render only when user clicks button to add group --}}
<div class="container-fluid" id="addGroup-div">
</div>

<div class="container-fluid text-center">
  <div class="row row-cols-2">
    {{! groups column }}
    <div id="groups-col" class="col">
      <h1>Groups</h1>
      <div class="container-fluid align-items-center">
        <button id="new-group" class="btn btn-dark" type="">New Group</button>
      </div>
      <div class="row row-cols-2">
        {{#each groups as |group|}}
          <div class="col">
            <p data-group-id="{{group.id}}">{{group.title}}</p>
          </div>
        {{/each}}
      </div>
    </div>
    {{! list column }}
    <div id="lists-col" class="col">
      <h1>Lists</h1>
            <div class="container-fluid align-items-center">
        <button id="new-list" class="btn btn-dark" type="">New Wish List</button>
      </div>
      <div class="row row-cols-2">
        {{#each lists as |list|}}
          <div class="col">
            <p data-list-id="{{list.id}}">{{list.title}}</p>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>