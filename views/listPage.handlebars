<div class="container text-center">
    <div class="row align-items-center">
        
        <h3>{{list.title}}<button type="button" class="btn btn-danger">Delete List</button></h3>

        <div class="col-2">
            <h4>Groups:</h4>
            <ol>
                {{#each list.groups as |group|}}
                    <li>{{group.title}}</li>
                    <button type="button" class="btn btn-danger">Remove Group</button>
                {{/each}}
            </ol>
        </div>

        <div class="col-10">
            <div class="card-deck">
                <div class="row">
                {{#each list.items as |item|}}
                    <div class="col-4 m-2">
                        <div class="card"  style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title">{{item.title}}</h5>
                                {{#if item.description}}
                                    <p class="card-text">{{item.description}}</p>
                                {{/if}}
                                {{#if item.link}}
                                    <a href="{{item.link}}" target="_blank" rel='noreferrer' class="card-link">Link to Product</a>
                                {{/if}}
                                <button type="button" class="btn btn-danger">Delete Item</button>
                            </div>
                        </div>
                    </div>
                {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

