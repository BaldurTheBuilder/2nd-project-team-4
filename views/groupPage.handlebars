{{! List those peeps! }}
<div class="container-fluid">
  <h2 class="text-uppercase">{{group.title}}</h2>
  <div>
    <ul class="list-group">
      {{#each group.users as |user|}}
        {{#if user}}
          <li
            data-user="{{user.id}}"
            class="list-group-item font-weight-bold text-center"
          >
            {{user.username}}
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
{{! Cards for items :) }}
{{! Left column }}
<div class="container-fluid">
  <div class="row">
    <div id="lists" class="col">
      {{#each group.lists as |list|}}
        <div data-owner="{{list.user_id}}" style="display: none">
          <h2>{{list.title}}</h2>
          {{#each list.items as |item|}}
            <div class="card">
              <p class="card-block"> {{item.title}} </p>
              {{!-- <img class="card-img-bottom" src="" alt="Card image cap" /> --}}
              <button type="button" class="close" aria-label="Close">
                <span aria-hidden="true">×</span>
              </button>
            </div>
          {{/each}}
        </div>
      {{/each}}

    </div>

